FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 503.15;

boundaryField
{
    walls
    {
        type            externalWallHeatFluxTemperature;
        kappaMethod     lookup;
        mode            coefficient;
        //q               uniform 1000; //ali q, ali Ta in h
        Ta              uniform 323.15;
        h               uniform 1.25e3;
        value           uniform 503.15; //initial temperature [K]
        kappa           mojKappaOut;
        Qr              none;
        relaxation      1;
    }

    outlet
    {
        type            externalWallHeatFluxTemperature;
        kappaMethod     lookup;
        mode            coefficient;
        //q               uniform 1000; //ali q, ali Ta in h
        Ta              uniform 323.15;
        h               uniform 1; // 1 means almost zeroGradient (thermal insulation), 0 is ill-posed
        value           uniform 503.15; //initial temperature [K]
        kappa           mojKappaOut;
        Qr              none;
        relaxation      1;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 503.15;
    }


    defaultFaces
    {
        type            empty;
    }
}

// ************************************************************************* //
